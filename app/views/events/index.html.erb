<% provide(:title, "SESA | Events")%>

<span class="events"></span>

<div id="events-container-1">
  <h1>Events</h1>
</div>

<% @recurring_status_posted = false%>
<% @upcoming_status_posted = false %>
<% @past_status_posted = false %>



<div class="events-container-aligner">
  <div style="max-width: 85rem;">
    <% if current_user.try(:admin?) %>
    <%= link_to 'New Event', new_event_path %>
    <%end %>
    <% @events.each do |event| %>
      <% if event[:status] == 'recurring' %>
        <% unless @recurring_status_posted %>
          <% @recurring_status_posted = true %>
          <h3><i class="fa fa-refresh fa-spin"></i> <strong>RECURRING</strong></h3>
        <% end %>
      <% end %>
      <% if event[:status] == 'upcoming' %>
        <% unless @upcoming_status_posted %>
          <% @upcoming_status_posted = true %>
          <h3><i class="fa fa-fire"></i> <strong>UPCOMING</strong></h3>
        <% end %>
      <% end %>
      <% if event[:status] == 'completed' %>
        <% unless @past_status_posted %>
          <% @past_status_posted = true %>
          <h3><i class="fa fa-check-square"></i> <strong>COMPLETED</strong></h3>
        <% end %>
      <% end %>
      <div style="max-width: 85rem;">
        <%= link_to(image_tag("#{event[:banner]}", class: 'effect-apollo events-images', alt: "#{event[:event]}"), "#{event[:facebook_url]}") %>
  <% if current_user.try(:admin?) %>
  <%= link_to 'Show', event %>
  <%= link_to 'Edit', edit_event_path(event) %>
  <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%end%>
      </div>
    <% end %>
  </div>
</div>


